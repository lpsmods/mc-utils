{
  "name": "@lpsmods/mc-utils",
  "version": "0.0.1",
  "author": "legopitstop",
  "license": "MIT",
  "description": "Utilities for making Minecraft: Bedrock Edition scripts",
  "main": "dist/index",
  "scripts": {
    "build": "node build.mjs",
    "copy": "xcopy \"src\" \"%UserProfile%\\Documents\\GitHub\\Minecraft\\mcutils-example\\scripts\\mc-utils\" /s /y /I",
    "rebuild": "npm run build && npm run copy && echo Done!",
    "dev": "chokidar \"src/**/*\" -c \"npm run rebuild\" -d",
    "test": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "minecraft-utils"
  },
  "keywords": [
    "minecraft",
    "bedrock",
    "utils",
    "addons",
    "scripting"
  ],
  "dependencies": {
    "@minecraft/math": "^2.2.6",
    "@minecraft/server": "^2.1.0",
    "@minecraft/server-ui": "^2.0.0",
    "chokidar-cli": "^3.0.0",
    "esbuild": "^0.25.4",
    "glob": "^11.0.2",
    "molang": "^2.0.1",
    "vitest": "^3.2.4"
  },
  "devDependencies": {
    "typescript": "^4.0.0"
  }
}
